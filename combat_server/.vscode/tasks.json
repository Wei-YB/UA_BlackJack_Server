{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/lib64/ccache/g++",
            "args": [
                "-g",
                "${workspaceFolder}/main.cc",
                "${workspaceFolder}/src/*.cc", //src
                "-I",
                "${workspaceFolder}/inc",
                "-I",
                "${workspaceFolder}/3rd/libco",
                "-L",
                "${workspaceFolder}/3rd/libco",
                "-l",
                "colib",
                "-o",
                "${workspaceFolder}/${fileBasenameNoExtension}",
                "-pthread",
                "-lstdc++",
                "-Wl,--no-as-needed",
                "-ldl"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}